<tc:tc-config xsi:schemaLocation="http://www.terracotta.org/schema/terracotta-4.xsd" xmlns:tc="http://www.terracotta.org/config" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <servers>
    <server name="server1" host="localhost">
      <data>terracotta/server1/data</data>
      <logs>terracotta/server1/logs</logs>
      <statistics>terracotta/server1/statistics</statistics>
      <jmx-port>9520</jmx-port>
      <l2-group-port>9543</l2-group-port>
      <dso-port>9510</dso-port>
      <dso>
        <persistence>
          <mode>permanent-store</mode>
        </persistence>
      </dso>
    </server>
    <server name="server2" host="localhost">
      <data>terracotta/server2/data</data>
      <logs>terracotta/server2/logs</logs>
      <statistics>terracotta/server2/statistics</statistics>
      <jmx-port>9521</jmx-port>
      <l2-group-port>9544</l2-group-port>
      <dso-port>9511</dso-port>
      <dso>
        <persistence>
          <mode>permanent-store</mode>
        </persistence>
      </dso>
    </server>
    <ha>
      <mode>networked-active-passive</mode>
      <networked-active-passive>
        <election-time>5</election-time>
      </networked-active-passive>
    </ha>
  </servers>
  <clients>
    <logs>terracotta/%(tomcat.instance.name)/logs</logs>
    <statistics>terracotta/%(tomcat.instance.name)/statistics</statistics>
  </clients>
  <application>
    <dso>
      <instrumented-classes>
		<include>
			<class-expression>*..*</class-expression>
			<honor-transient>true</honor-transient>
		</include>
        <!--But exclude Tomcat internals to improve performance of webapp load-->
        <exclude>org.apache.coyote..*</exclude>
        <exclude>org.apache.catalina..*</exclude>
        <exclude>org.apache.jasper..*</exclude>
        <exclude>org.apache.tomcat..*</exclude>
      </instrumented-classes>
      <web-applications>
        <web-application>Cart</web-application>
	</web-applications>
    </dso>
  </application>
</tc:tc-config>
