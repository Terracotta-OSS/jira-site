<?xml version="1.0" encoding="UTF-8"?>
<con:tc-config xmlns:con="http://www.terracotta.org/config">
  <servers>
    <server host="%i" name="localhost">
      <dso-port>9510</dso-port>
      <jmx-port>9520</jmx-port>
      <data>terracotta/server-data</data>
      <logs>terracotta/server-logs</logs>
      <statistics>terracotta/cluster-statistics</statistics>
    </server>
    <update-check>
      <enabled>true</enabled>
    </update-check>
  </servers>
  <clients>
    <logs>terracotta/client-logs</logs>
    <statistics>terracotta/client-statistics/%D</statistics>
  </clients>
  <application>
    <dso>
      <instrumented-classes>
        <include>
          <class-expression>ClassB</class-expression>
          <honor-transient>true</honor-transient>
        </include>
        <include>
          <class-expression>ClassA</class-expression>
          <honor-transient>true</honor-transient>
          <on-load>
            <method>onTerracottaLoad</method>
          </on-load>
        </include>
      </instrumented-classes>
      <roots>
        <root>
          <field-name>ClassA.s_root</field-name>
        </root>
        <root>
          <field-name>ClassB.s_root</field-name>
        </root>
      </roots>
    </dso>
  </application>
</con:tc-config>